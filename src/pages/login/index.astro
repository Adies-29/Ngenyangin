---
// PERUBAHAN DI SINI: Naik 2 level (../../) karena file ada di dalam folder /login/
import Layout from '../../layouts/Layout.astro';
import "../../style/global.css";
import { Image } from "astro:assets";
import logo from "../../assets/logo1.png";

---

<Layout title="Login - Ngenyangin">
  <main class="min-h-screen w-full bg-gradient-to-b from-yellow-400 via-yellow-200 to-white flex flex-col items-center justify-center p-4 relative overflow-hidden">
    
    <div class="mb-8 z-10 animate-fade-in-down">
      <img 
        src="/logo-ngenyangin.png" 
        alt="Ngenyangin Logo" 
        class="h-16 md:h-20 object-contain drop-shadow-md"
        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
      />
      <div class="hidden flex-col items-center">
        <span class="text-4xl font-black text-red-600 tracking-tight" style="font-family: 'Poppins', sans-serif;">
          <Image src={logo} alt="Logo" class="h-16 w-auto" />
      </div>
    </div>

    <div class="relative w-full max-w-md p-8 rounded-3xl bg-white/20 border border-white/30 shadow-[0_8px_32px_0_rgba(31,38,135,0.1)] backdrop-blur-xl z-10">
      
      <h2 class="text-3xl font-bold text-white text-center mb-8 drop-shadow-sm">Login</h2>

      <form class="space-y-6">
        
        <div class="space-y-2">
          <label for="email" class="block text-sm font-medium text-yellow-900/80 ml-1">Email address</label>
          <input 
            type="email" 
            id="email" 
            name="email"
            class="w-full px-5 py-3 rounded-xl bg-white border-none text-gray-700 placeholder-gray-400 focus:ring-4 focus:ring-white/50 focus:outline-none transition-all shadow-sm"
            placeholder="name@example.com"
          />
        </div>

        <div class="space-y-2">
          <label for="password" class="block text-sm font-medium text-yellow-900/80 ml-1">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password"
            class="w-full px-5 py-3 rounded-xl bg-white border-none text-gray-700 placeholder-gray-400 focus:ring-4 focus:ring-white/50 focus:outline-none transition-all shadow-sm"
            placeholder="••••••••"
          />
        </div>

        <div class="flex justify-end">
          <a href="#" class="text-sm text-yellow-900/70 hover:text-yellow-900 hover:underline transition-colors">
            Lupa password?
          </a>
        </div>

        <div class="flex gap-4 pt-2">
          <button 
            type="button" 
            class="flex-1 py-3 px-4 bg-white/80 hover:bg-white text-gray-800 font-semibold rounded-xl shadow-sm hover:shadow-md transition-all duration-200 transform hover:-translate-y-0.5"
          >
            Sign in
          </button>
          <button 
            type="submit" 
            class="flex-1 py-3 px-4 bg-white hover:bg-gray-50 text-gray-800 font-bold rounded-xl shadow-md hover:shadow-lg transition-all duration-200 transform hover:-translate-y-0.5"
          >
            Login
          </button>
        </div>

      </form>
    </div>

    <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-0 pointer-events-none">
       <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-yellow-300/30 rounded-full blur-3xl"></div>
       <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-orange-300/20 rounded-full blur-3xl"></div>
    </div>

  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');
  
  body {
    font-family: 'Poppins', sans-serif;
  }

  @keyframes fadeInDown {
    from { opacity: 0; transform: translate3d(0, -20px, 0); }
    to { opacity: 1; transform: translate3d(0, 0, 0); }
  }
  .animate-fade-in-down {
    animation: fadeInDown 0.8s ease-out;
  }
</style>