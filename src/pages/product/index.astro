---
import PublicLayout from "../../layouts/PublicLayout.astro";

// 1. Ambil ID dari URL
const id = Astro.url.searchParams.get("id");

let product = null;

try {
    // 2. FETCH DATA & CARI (Tanpa Mapping)
    // Kita langsung pakai data mentah dari backend
    const res = await fetch('http://localhost:3000/api/products');
    const data = await res.json();
    const allProducts = data.data || data || [];

    // Cari produk yang ID-nya cocok
    product = allProducts.find((p: any) => String(p.PRODUCT_ID) === String(id));

} catch (error) {
    console.log("Gagal ambil detail produk:", error);
}

// 3. Kalau produk tidak ketemu, redirect ke home
if (!product) {
    return Astro.redirect('/');
}

// Helper Format Rupiah
const formatRupiah = (num: number) => "Rp " + Number(num).toLocaleString('id-ID');
---

<PublicLayout title={product.PRODUCT_NAME}>
    
    <div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        
        <div class="max-w-3xl w-full bg-white rounded-[30px] shadow-xl overflow-hidden flex flex-col md:flex-row">
            
            <div class="md:w-1/2 bg-gray-100 relative min-h-[300px] flex items-center justify-center p-8">
                <img 
                    src={product.IMAGE || "https://placehold.co/400x600?text=No+Image"} 
                    alt={product.PRODUCT_NAME} 
                    class="w-full h-auto object-contain rounded-xl shadow-sm hover:scale-105 transition duration-500"
                />
            </div>

            <div class="md:w-1/2 p-10 flex flex-col justify-center">
                
                <div class="mb-4">
                    <span class="text-blue-600 font-bold tracking-wider text-sm uppercase">
                        KATEGORI ID: {product.CATEGORY_ID}
                    </span>
                </div>

                <h1 class="text-4xl font-black text-gray-900 mb-4 leading-tight">
                    {product.PRODUCT_NAME}
                </h1>

                <p class="text-gray-500 text-lg mb-8 leading-relaxed">
                    {product.DESCRIPTION || "Deskripsi belum tersedia di database."}
                </p>

                <div class="flex items-center gap-4 mb-8">
                    <span class="text-4xl font-black text-[#C90003] tracking-tight">
                        {formatRupiah(product.PRICE)}
                    </span>
                    <span class="text-sm text-gray-400 font-medium bg-gray-100 px-3 py-1 rounded-full">
                        Stok: {product.STOCK}
                    </span>
                </div>

                <div class="flex flex-col gap-4">
                    <button class="w-full bg-[#FEB516] hover:bg-yellow-700 text-white font-bold py-4 rounded-2xl shadow-lg transition transform hover:scale-[1.02] text-lg flex justify-center items-center gap-2" onclick="alert('Berhasil Masuk Keranjang')">
                        <span>+</span> Masukkan Keranjang
                    </button>
                    
                    <a href="/#kategori" class="text-center text-gray-400 hover:text-gray-800 transition font-medium mt-2">
                        Kembali ke Menu
                    </a>
                </div>

            </div>

        </div>
    </div>

</PublicLayout>