---
import AdminLayout from "../../../../layouts/AdminLayout.astro";

const { id } = Astro.params; // ID LAMA (dari URL)

// 1. Ambil Data Lama buat ditampilkan di input
// Perbaikan: Tambahkan "http://" dan path "/api/" jika backendmu pakai prefix api
const response = await fetch(`http://localhost:3000/api/categories/${id}`);
const categoryData = await response.json();
// Kadang data dari API dibungkus array/object, sesuaikan:
const category = categoryData[0] || categoryData; 

// 2. PROSES UPDATE (Saat tombol ditekan)
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    
    // Ambil data dari input form di bawah
    const namaBaru = formData.get("category");    // sesuai name="category"
    const idBaru = formData.get("category_id");   // sesuai name="category_id"

    // Kirim ke Backend
    // PENTING: URL fetch pakai ${id} (ID LAMA), tapi body kirim ID BARU
    await fetch(`http://localhost:3000/api/categories/${id}`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
            category: namaBaru,
            category_id: idBaru
        })
    });

    // Redirect balik ke admin
    return Astro.redirect("/admin/categories");
}
