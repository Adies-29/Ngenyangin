import AdminLayout from "../../../layouts/AdminLayout.astro";

// --- 1. HANDLE SERVER ACTION (HAPUS PRODUK) ---
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const idToDelete = formData.get("id");

        // Panggil Backend untuk hapus
        const res = await fetch(`http://localhost:3000/api/products/${idToDelete}`, {
            method: "DELETE",
        });

        if (res.ok) {
            // Refresh halaman jika sukses
            return Astro.redirect("/admin/products");
        } else {
            console.error("Gagal menghapus produk");
        }
    } catch (e) {
        console.error("Error connection:", e);
    }
}

// --- 2. FETCH DATA DARI BACKEND (Load Data) ---
let allProducts: any[] = [];
let categories: any[] = [];
let groupedProducts: any = {};

const formatRupiah = (num: number) => "Rp " + num.toLocaleString("id-ID");

try {
    // A. Ambil Data Kategori
    const resCat = await fetch("http://localhost:3000/api/categories");
    const dataCat = await resCat.json();
    const rawCategories = dataCat.data || dataCat || [];

    categories = rawCategories.map((c: any) => ({
        id: c.CATEGORY_ID || c.id,
        name: c.CATEGORY || c.name,
    }));

    // B. Ambil Data Produk
    const resProd = await fetch("http://localhost:3000/api/products");
    const dataProd = await resProd.json();
    const rawProducts = dataProd.data || dataProd || [];

    allProducts = rawProducts.map((p: any) => ({
        id: p.PRODUCT_ID,
        name: p.PRODUCT_NAME,
        price: p.PRICE,
        stock: p.STOCK,
        categoryId: p.CATEGORY_ID,
        image: p.IMAGE || "https://placehold.co/100x100?text=No+Img",
    }));

    // C. Grouping Produk per Kategori
    categories.forEach((cat: any) => {
        groupedProducts[cat.id] = allProducts.filter(
            (p: any) => p.categoryId == cat.id,
        );
    });
} catch (e) {
    console.log("Error fetch data:", e);
}
