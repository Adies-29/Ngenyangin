import AdminLayout from "../../../layouts/AdminLayout.astro";

// --- 1. INISIALISASI VARIABEL ---
let categories = [];
let errorMessage = "";
let oldData = { 
    name: "", 
    price: "", 
    stock: "", 
    category_id: "", 
};

// --- 2. AMBIL DATA KATEGORI (Untuk Dropdown) ---
try {
    const res = await fetch('http://localhost:3000/api/categories');
    const data = await res.json();
    const rawData = data.data || data || [];
    
    categories = rawData.map((c: any) => ({
        id: c.CATEGORY_ID || c.id,
        name: c.CATEGORY || c.name
    }));
} catch (e) {
    console.error("Gagal ambil kategori:", e);
}

// --- 3. HANDLE SERVER ACTION (POST SUBMISSION) ---
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        
        // Ambil value dari form
        const name = formData.get("name");
        const price = formData.get("price");
        const stock = formData.get("stock");
        const category_id = formData.get("category_id");
        
      
        // Simpan ke oldData (jaga-jaga kalau error, input gak hilang)
        oldData = {
            name: name?.toString() || "",
            price: price?.toString() || "",
            stock: stock?.toString() || "",
            category_id: category_id?.toString() || ""
            

        };

        // Siapkan Payload JSON untuk Backend
        const payload = {
            product_name: name,         
            price: Number(price),
            stock: Number(stock),
            category_id: category_id,
            created_by: 'Admin',           
            image: "no-image.jpg"       
        };

        // Kirim ke Backend API
        const response = await fetch('http://localhost:3000/api/products', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });

        const result = await response.json();

        if (response.ok) {

            // Sukses? Redirect ke halaman list
            return Astro.redirect("/admin/products");

        } else {
            // Gagal? Tampilkan pesan error
            errorMessage = result.message || "Gagal menyimpan data ke backend.";
        }

    } catch (error) {
        console.error(error);
        errorMessage = "Terjadi kesalahan koneksi ke server.";
    }
}
---

<AdminLayout title="Tambah Produk">
    <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-lg p-8">
        <div class="mb-6 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-gray-800 mb-2">
                Tambah Produk Baru
            </h1>
            <a
                href="/admin/products"
                class="text-gray-500 hover:text-gray-800 text-sm font-bold"
            >
                &larr; Batal
            </a>
        </div>

        {errorMessage && (
            <div class="mb-6 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                <span class="font-medium">{errorMessage}</span>
            </div>
        )}

        <form method="POST" class="space-y-6">
            
            <div class="space-y-2">
                <label class="block text-gray-800 font-semibold text-sm mb-1">
                    Nama Produk <span class="text-red-500">*</span>
                </label>
                <input 
                    type="text" 
                    name="name" 
                    required 
                    value={oldData.name} 
                    placeholder="Contoh: Indomie Goreng"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200"
                />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="block text-gray-800 font-semibold text-sm mb-1">
                        Harga (Rp) <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500">Rp</span>
                        <input 
                            type="number" 
                            name="price" 
                            required 
                            value={oldData.price} 
                            placeholder="0" 
                            min="0"
                            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200"
                        />
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="block text-gray-800 font-semibold text-sm mb-1">
                        Stok <span class="text-red-500">*</span>
                    </label>
                    <input 
                        type="number" 
                        name="stock" 
                        required 
                        value={oldData.stock} 
                        placeholder="0" 
                        min="0"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200"
                    />
                </div>
            </div>

            <div class="space-y-2">
                <label class="block text-gray-800 font-semibold text-sm mb-1">
                    Kategori <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <select 
                        name="category_id" 
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200 appearance-none"
                    >
                        <option value="" disabled selected={!oldData.category_id}>-- Pilih Kategori --</option>
                        {categories.map((cat: any) => (
                            <option 
                                value={cat.id} 
                                selected={String(oldData.category_id) === String(cat.id)}
                            >
                                {cat.name}
                            </option>
                        ))}
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                    </div>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row justify-end gap-4 pt-6 border-t border-gray-200">
                <button type="submit"
                    class="w-full bg-[#FEB516] hover:bg-yellow-500 text-yellow-900 font-black py-4 rounded-xl shadow-lg shadow-yellow-200 transition transform hover:-translate-y-1 active:scale-95 text-lg">
                    Simpan Produk
                </button>
            </div>
        </form>
    </div>
</AdminLayout>